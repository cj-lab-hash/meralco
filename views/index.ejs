<!DOCTYPE html>
<html>
<head>
  <title>Electric Billing System</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
  <div class="container mt-5">
    <h2>Electric Billing Entry</h2>
    <form method="POST" action="/">
      <div class="mb-3">
        <label>Actual Bill (₱)</label>
        <input type="number" step="0.01" name="actual_bill" class="form-control" required>
      </div>
      <div class="mb-3">
        <label>Current Consumption (kWh)</label>
        <input type="number" step="0.01" name="current_consumption" class="form-control" required>
      </div>
      <div class="mb-3">
        <label>Previous Consumption (kWh)</label>
        <input type="number" step="0.01" name="previous_consumption" class="form-control" required>
      </div>
      <div class="mb-3">
        <label>Rate per kWh (₱)</label>
        <input type="number" step="0.01" name="rate_per_kwh" class="form-control" required>
      </div>
      <div class="mb-3">
        <label>Ate Gen Current Reading (kWh)</label>
        <input type="number" step="0.01" name="gen_current" class="form-control" required>
      </div>
      <div class="mb-3">
        <label>Ate Gen Previous Reading (kWh)</label>
        <input type="number" step="0.01" name="gen_previous" class="form-control" required>
      </div>
      <div class="mb-3">
        <label>Billing Date</label>
        <input type="date" name="billing_date" class="form-control" required>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>

    <hr>

    <h3>Billing Records</h3>
    <div class="table-responsive">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Billing Date</th>
          <th>Actual Bill</th>
          <th>Total Consumption</th>
          <th>Rate/kWh</th>
          <th>Current Reading</th>
          <th>Previous Reading</th>
          <th>Ate Gen Previous Reading</th>
          <th>Ate Gen Current Reading</th>
          <th>Ate Gen Consumption</th>
          <th>Ate Gen Bill</th>
          <th>JM Bill</th>
          
        </tr>
      </thead>
      <tbody>
  <% if (record) { %>
    <tr>
      <td><%= record.date %></td>
      <td><%= record.formattedActualBill %></td>
      <td><%= record.total_consumption %></td>
      <td><%= record.rate %></td>
      <td><%= record.current_reading %></td>
      <td><%= record.previous_reading %></td>
      <td><%= record.gen_previous %></td>
      <td><%= record.gen_current %></td>
      <td><%= record.gen_consumption %></td>
      <td><%= record.formattedGenBill %></td>
      <td><%= record.formattedJmBill %></td>

    </tr>
  <% } else { %>
    <tr><td colspan="11" class="text-center">No records yet.</td></tr>
  <% } %>
    </tbody>
    </table>
  </div>

  <button class="btn btn-secondary mb-3" type="button" data-bs-toggle="collapse" data-bs-target="#allRecords">
  Show All Billing Records
</button>

<div class="collapse" id="allRecords">
  <div class="table-responsive">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Billing Date</th>
          <th>Actual Bill</th>
          <th>Total Consumption</th>
          <th>Rate/kWh</th>
          <th>Current Reading</th>
          <th>Previous Reading</th>
          <th>Ate Gen Previous</th>
          <th>Ate Gen Current</th>
          <th>Ate Gen Consumption</th>
          <th>Ate Gen Bill</th>
          <th>JM Bill</th>
        </tr>
      </thead>
      <tbody>
        <% records.forEach(record => { %>
          <tr>
            <td><%= record.date %></td>
            <td><%= record.formattedActualBill %></td>
            <td><%= record.total_consumption %></td>
            <td><%= record.rate %></td>
            <td><%= record.current_reading %></td>
            <td><%= record.previous_reading %></td>
            <td><%= record.gen_previous %></td>
            <td><%= record.gen_current %></td>
            <td><%= record.gen_consumption %></td>
            <td><%= record.formattedGenBill %></td>
            <td><%= record.formattedJmBill %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</html>
